<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".OptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/buttonEducation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EDUKACJA"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/buttonShop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SKLEP"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/buttonReports"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RAPORTY"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/buttonCommunity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SPOŁECZNOŚĆ"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:background="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KALENDARZ"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/buttonAppSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USTAWIENIA APLIKACJI"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O TWÓRCACH"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/buttonContactUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAPISZ DO NAS"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        android:background="@color/white" />

</LinearLayout>
