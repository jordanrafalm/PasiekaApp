<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PanelFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerViewPasieka1"
        android:name="com.example.pasiekaapp.PasiekaFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Nowy element na dole z zaokrąglonym tłem -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/rounded_corner_background">

        <Button
            android:id="@+id/qrButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QR"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/nfcButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NFC"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/addApiaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dodaj Pasiekę"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
